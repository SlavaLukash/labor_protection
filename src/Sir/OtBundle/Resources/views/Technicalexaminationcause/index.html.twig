{% extends '::base.html.twig' %}

{% block submenu %}
    {{ include('SirOtBundle:Submenu:Administration.html.twig') }}
{% endblock %}

{% block body -%}
    <h1>{% trans %}Technicalexaminationcause list{% endtrans %}</h1>
    <a id="ot_list_create" href="{{ path('technicalexaminationcause_new') }}">
        {% trans %}Create a new entry{% endtrans %}
    </a>
    {% block filter %}
        {{ include('SirOtBundle:Default:ot_filter_form_template.html.twig') }}
    {% endblock %}
    <table class="records_list">
        <thead>
            <tr>
                <th>{% trans %}Id{% endtrans %}</th>
                <th>{% trans %}Name{% endtrans %}</th>
                <th>{% trans %}Actions{% endtrans %}</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>{{ entity.id }}</td>
                <td><a href="{{ path('technicalexaminationcause_show', { 'id': entity.id }) }}">{{ entity.name }}</a></td>
                <td>
                <ul>
                    <li>
                        <a class="show-action" href="{{ path('technicalexaminationcause_show', { 'id': entity.id }) }}" title="{% trans %}Show{% endtrans %}"></a>
                    </li>
                    <li>
                        <a class="edit-action" href="{{ path('technicalexaminationcause_edit', { 'id': entity.id }) }}" title="{% trans %}Edit{% endtrans %}"></a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
