{% extends '::base.html.twig' %}

{% block submenu %}
    {{ include('SirOtBundle:Submenu:Equipment.html.twig') }}
{% endblock %}

{% block body -%}
    <h1>{% trans %}Equipment list{% endtrans %}</h1>
	<a id="ot_list_create" href="{{ path('enterprise_new') }}">
		{% trans %}Create a new entry{% endtrans %}
	</a>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>{% trans %}Name{% endtrans %}</th>
                <th>{% trans %}Model{% endtrans %}</th>
                <th>{% trans %}Registrationnumber{% endtrans %}</th>
                <th>{% trans %}Internalnumber{% endtrans %}</th>
                <th>{% trans %}Factorynumber{% endtrans %}</th>
                <th>{% trans %}Manufacturer{% endtrans %}</th>
                <th>{% trans %}Productiondate{% endtrans %}</th>
                <th>{% trans %}Startupdate{% endtrans %}</th>
                <th>{% trans %}Life{% endtrans %}</th>
				<th>{% trans %}Actions{% endtrans %}</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('equipment_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.model }}</td>
                <td>{{ entity.registrationnumber }}</td>
                <td>{{ entity.internalnumber }}</td>
                <td>{{ entity.factorynumber }}</td>
                <td>{{ entity.manufacturer }}</td>
                <td>{% if entity.productiondate %}{{ entity.productiondate|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.startupdate %}{{ entity.startupdate|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.life }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('equipment_show', { 'id': entity.id }) }}">{% trans %}Show{% endtrans %}</a>
                    </li>
                    <li>
                        <a href="{{ path('equipment_edit', { 'id': entity.id }) }}">{% trans %}Edit{% endtrans %}</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {% endblock %}
