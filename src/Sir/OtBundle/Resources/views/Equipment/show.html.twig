{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Equipment</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Model</th>
                <td>{{ entity.model }}</td>
            </tr>
            <tr>
                <th>Registrationnumber</th>
                <td>{{ entity.registrationnumber }}</td>
            </tr>
            <tr>
                <th>Internalnumber</th>
                <td>{{ entity.internalnumber }}</td>
            </tr>
            <tr>
                <th>Factorynumber</th>
                <td>{{ entity.factorynumber }}</td>
            </tr>
            <tr>
                <th>Manufacturer</th>
                <td>{{ entity.manufacturer }}</td>
            </tr>
            <tr>
                <th>Productiondate</th>
                <td>{{ entity.productiondate|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Startupdate</th>
                <td>{{ entity.startupdate|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Life</th>
                <td>{{ entity.life }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('equipment') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('equipment_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
