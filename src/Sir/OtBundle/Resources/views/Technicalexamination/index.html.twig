{% extends '::base.html.twig' %}

{% block submenu %}
    {{ include('SirOtBundle:Submenu:Equipment.html.twig') }}
{% endblock %}

{% block body -%}
    <h1>Technicalexamination list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Resulttext</th>
                <th>Plandate</th>
                <th>Factdate</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('technicalexamination_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.resulttext }}</td>
                <td>{% if entity.plandate %}{{ entity.plandate|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.factdate %}{{ entity.factdate|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('technicalexamination_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('technicalexamination_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('technicalexamination_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
