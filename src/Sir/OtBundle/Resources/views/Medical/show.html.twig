{% extends '::base.html.twig' %}

{% block submenu %}
    {{ include('SirOtBundle:Submenu:Employee.html.twig') }}
{% endblock %}

{% block body -%}
    <h1>{% trans %}Medical{% endtrans %}</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>{% trans %}Id{% endtrans %}</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>{% trans %}LFMname{% endtrans %}</th>
                <td>{{ entity.employee }}</td>
            </tr>
            <tr>
                <th>{% trans %}Medicalkind{% endtrans %}</th>
                <td>{{ entity.medicalkind }}</td>
            </tr>
            <tr>
                <th>{% trans %}Medicaltype{% endtrans %}</th>
                <td>{{ entity.medicaltype }}</td>
            </tr>
            <tr>
                <th>{% trans %}Comment{% endtrans %}</th>
                <td>{{ entity.comment }}</td>
            </tr>
            <tr>
                <th>{% trans %}Dateplan{% endtrans %}</th>
                <td>{{ entity.dateplan|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>{% trans %}Datefact{% endtrans %}</th>
                <td>{{ entity.datefact|date('Y-m-d H:i:s') }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
            <li>
                <a href="{{ path('medical') }}">
                    {% trans %}Back to the list{% endtrans %}
                </a>
            </li>
            <li>
                <a href="{{ path('medical_edit', { 'id': entity.id }) }}">
                    {% trans %}Edit{% endtrans %}
                </a>
            </li>
            <li>{{ form(delete_form) }}</li>
            <li>
                <ul class="button-list">
                    <li class="b-list-first-child"><a href="#">{% trans %}Report{% endtrans %} <p>&nbsp;</p></a></li>
                    <li><a href="/reports/index.php?stimulsoft_report_key=FormN1.mrt?VarId={{ entity.id }}" target="_blank">Акт (форма Н-1)</a></li>
                    <li><a href="/reports/index.php?stimulsoft_report_key=TraumaGroupNotice.mrt?VarId={{ entity.id }}" target="_blank">Извещение о групповом НС</a></li>
                    <li><a href="/reports/index.php?stimulsoft_report_key=TraumaNotice.mrt?VarId={{ entity.id }}" target="_blank">Сообщение о последствиях</a></li>
                </ul>
            </li>
        </ul>
{% endblock %}
