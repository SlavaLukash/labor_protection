{% extends '::base.html.twig' %}

{% block submenu %}
    {{ include('SirOtBundle:Submenu:Employee.html.twig') }}
{% endblock %}

{% block body -%}
    <h1>Medical list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Comment</th>
                <th>Dateplan</th>
                <th>Datefact</th>
				<th>{% trans %}Actions{% endtrans %}</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('medical_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.comment }}</td>
                <td>{% if entity.dateplan %}{{ entity.dateplan|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.datefact %}{{ entity.datefact|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('medical_show', { 'id': entity.id }) }}">{% trans %}Show{% endtrans %}</a>
                    </li>
                    <li>
                        <a href="{{ path('medical_edit', { 'id': entity.id }) }}">{% trans %}Edit{% endtrans %}</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('medical_new') }}">
                {% trans %}Create a new entry{% endtrans %}
            </a>
        </li>
    </ul>
    {% endblock %}
