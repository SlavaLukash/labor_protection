{% extends '::base.html.twig' %}

{% block submenu %}
    {{ include('SirOtBundle:Submenu:Employee.html.twig') }}
{% endblock %}

{% block body -%}
    <h1>Employee list</h1>
	{% block filter %}
		{{ include('SirOtBundle:Default:ot_filter_form_template.html.twig') }}
	{% endblock %}
    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Lastname</th>
                <th>Firstname</th>
                <th>Middlename</th>
                <th>Sex</th>
                <th>Bithday</th>
                <th>Date_first_medical</th>
                <th>Date_instruction</th>
				<th>{% trans %}Actions{% endtrans %}</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('employee_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.lastname }}</td>
                <td>{{ entity.firstname }}</td>
                <td>{{ entity.middlename }}</td>
                <td>{% if entity.sex == 0 %}лќ{% else %}лю{% endif %}</td>
                <td>{% if entity.bithday %}{{ entity.bithday|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.datefirstmedical %}{{ entity.datefirstmedical|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.dateinstruction %}{{ entity.dateinstruction|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('employee_show', { 'id': entity.id }) }}">{% trans %}Show{% endtrans %}</a>
                    </li>
                    <li>
                        <a href="{{ path('employee_edit', { 'id': entity.id }) }}">{% trans %}Edit{% endtrans %}</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
<br />
        <ul>
        <li>
            <a id="ot_list_create" href="{{ path('employee_new') }}">
                {% trans %}Create a new entry{% endtrans %}
            </a>
        </li>
    </ul>
    {% endblock %}
