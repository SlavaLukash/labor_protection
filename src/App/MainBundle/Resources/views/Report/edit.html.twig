{% extends 'MainBundle:CRUD:edit.html.twig' %}

{% block submenu %}
    {#{{ include('MainBundle:Submenu:Administration.html.twig') }}#}
    {% include 'MainBundle:Submenu:Reports.html.twig' with {'CategoryReportEntities': CategoryReportEntities, 'current': categoryid}  %}
{% endblock %}

{% block breadcrumbs %}
    {% if isNew %}
        {{ app.breadcrumbs.prepend('Добавление пользователя') }}
    {% else %}
        {{ app.breadcrumbs.prepend('User edit'|trans) }}
    {% endif %}
    {{ app.breadcrumbs.prepend('Пользователи', path('user_list')) }}
    {{ parent() }}
{% endblock %}

{% block panel_title %}
    {% if isNew %}
        {% trans %}Report creation{% endtrans %}
    {% else %}
        {% trans %}Report edit{% endtrans %}
    {% endif %}
{% endblock %}

{% block actions %}
    {% include 'MainBundle:CRUD:form_actions.html.twig' with {
        'is_new': isNew,
        'route_list': path('report_list'),
        'route_remove' : not isNew ? path('report_remove', {'id': entity.id}) : ''
    } %}
{% endblock %}