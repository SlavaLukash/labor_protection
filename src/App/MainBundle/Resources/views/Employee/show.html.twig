{% extends '::base.html.twig' %}

{% block submenu %}
    {{ include('MainBundle:Submenu:Employee.html.twig') }}
{% endblock %}

{% block body -%}
    <h1>{% trans %}Employee{% endtrans %}</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>{% trans %}Id{% endtrans %}</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>{% trans %}Lastname{% endtrans %}</th>
                <td>{{ entity.lastname }}</td>
            </tr>
            <tr>
                <th>{% trans %}Firstname{% endtrans %}</th>
                <td>{{ entity.firstname }}</td>
            </tr>
            <tr>
                <th>{% trans %}Middlename{% endtrans %}</th>
                <td>{{ entity.middlename }}</td>
            </tr>
            <tr>
                <th>{% trans %}Sex{% endtrans %}</th>
                <td>{{ entity.sex }}</td>
            </tr>
            <tr>
                <th>{% trans %}Profession{% endtrans %}</th>
                <td>{{ entity.profession }}</td>
            </tr>
            <tr>
                <th>{% trans %}Subdivision{% endtrans %}</th>
                <td>{{ entity.subdivision }}</td>
            </tr>
            <tr>
                <th>{% trans %}Enterprise{% endtrans %}</th>
                <td>{{ entity.subdivision.enterprise }}</td>
            </tr>
            <tr>
                <th>{% trans %}Marriagekind{% endtrans %}</th>
                <td>{{ entity.marriagekind }}</td>
            </tr>
            <tr>
                <th>{% trans %}Bithday{% endtrans %}</th>
                <td>
                    {% if entity.bithday %}
                        {{ entity.bithday|date('d.m.Y') }}
                    {% endif %}
                </td>
            </tr>
            <tr>
                <th>{% trans %}Date_first_medical{% endtrans %}</th>
                <td>
                    {% if entity.datefirstmedical %}
                        {{ entity.datefirstmedical|date('d.m.Y') }}
                    {% endif %}
                </td>
            </tr>
            <tr>
                <th>{% trans %}Date_instruction{% endtrans %}</th>
                <td>
                    {% if entity.dateinstruction %}
                        {{ entity.dateinstruction|date('d.m.Y') }}
                    {% endif %}
                </td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('employee') }}">
            {% trans %}Back to the list{% endtrans %}
        </a>
    </li>
    <li>
        <a href="{{ path('employee_edit', { 'id': entity.id }) }}">
            {% trans %}Edit{% endtrans %}
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
